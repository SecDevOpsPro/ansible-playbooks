{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':automergeAll',
  ],
  dependencyDashboard: true,
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification',
  ],
  rebaseWhen: 'conflicted',
  schedule: [
    'before 5:30am',
  ],
  lockFileMaintenance: {
    enabled: true,
  },
  automerge: true,
  automergeType: 'pr',
  pruneStaleBranches: true,
  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      automerge: true,
      automergeType: 'pr',
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      automerge: false,
      reviewersFromCodeOwners: true,
    },
    {
      matchFileNames: [
        'mise.toml',
      ],
      addLabels: [
        'tools',
      ],
      commitMessageTopic: 'Development tool {{depName}}',
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/common/.+\\.ya?ml$/',
      ],
      matchStrings: [
        '# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\s+.+: ["\']?(?<currentValue>[^"\'\\s]+)["\']?',
      ],
      versioningTemplate: '{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}',
    },
  ],
  separateMinorPatch: true,
  separateMajorMinor: true,
  prConcurrentLimit: 5,
  prHourlyLimit: 2,
}
